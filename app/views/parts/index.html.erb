<table id="parts" class="table table-striped table-dark">
  <tr class="table-dark">
    <th scope="col" class="col p-3">
      <% if @number_sort_direction == "ASC" %>
        <%= link_to "Number", {:sort => "number", :direction => "DESC"}, class: "no-link" %>
      <% else %>
        <%= link_to "Number", {:sort => "number", :direction => "ASC"}, class: "no-link" %>
      <% end %>
    </th>
    <th scope="col" class="col p-3">
      <%= link_to "Category", {:sort => "category"}, class: "no-link" %>
    </th>
    <th scope="col" class="col p-3">
      <%= link_to "Machine", {:sort => "machine_id"}, class: "no-link" %>
    </th>
  </tr>
  <% @parts.each do |part| %>
    <%= render part %>
  <% end %>
</table>
<%= link_to "New part", new_part_path %>
